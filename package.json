{
    "name": "@eldritchtools/shared-components",
    "version": "1.0.0",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "babel src --out-dir dist --extensions \".js,.jsx\" && npm run copy-css",
        "copy-css": "copyfiles -u 1 src/**/*.css dist/"
    },
    "peerDependencies": {
        "react": ">=19.0.0 <20.0.0",
        "react-dom": ">=19.0.0 <20.0.0",
        "react-tooltip": "^5.30.0",
        "use-debounced-effect": "^2.0.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.28.3",
        "@babel/core": "^7.28.3",
        "@babel/preset-env": "^7.28.3",
        "@babel/preset-react": "^7.27.1",
        "baseline-browser-mapping": "^2.9.2",
        "copyfiles": "^2.4.1"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "modules": false
                }
            ],
            [
                "@babel/preset-react",
                {
                    "runtime": "automatic"
                }
            ]
        ]
    }
}
